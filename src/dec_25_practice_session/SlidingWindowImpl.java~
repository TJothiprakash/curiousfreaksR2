package dec_25_practice_session;

import java.util.Arrays;

public class SlidingWindowImpl {
    public static void main(String[] args) {

    }
    // find threesum

    public int threeSum(int[] nums, int target) {
        int n = nums.length;
        Arrays.sort(nums);
        for (int i = 0; i < n; i++) {
            int left = i + 1;
            int right = n - 1;
            while (left < right) {
                int sum = nums[i] + nums[left] + nums[right];
                if (sum == target) {
                    return sum;
                } else if (sum < target) {
                    left++;
                } else {
                    right--;
                }
            }
        }
        return -1;
    }
}
